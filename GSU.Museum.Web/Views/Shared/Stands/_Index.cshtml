@model GSU.Museum.Web.Models.StandViewModel

@{
    <h3>Просмотр стенда - @Model.TitleRu</h3>
    <div class="flex-column">
        <div class="form-group">
            <h5>Название (BY)</h5>
            <p>@Model.TitleBe</p>
        </div>
        <div class="form-group">
            <h5>Название (RU)</h5>
            <p>@Model.TitleRu</p>
        </div>
        <div class="form-group">
            <h5>Название (EN)</h5>
            <p>@Model.TitleEn</p>
        </div>
        <div class="form-group">
            <h5>Описание стенда (BY)</h5>
            @if (!string.IsNullOrEmpty(Model.DescriptionBe))
            {
                <p>@Model.DescriptionBe</p>
            }
            else
            {
                <p>Нет описания</p>
            }
        </div>
        <div class="form-group">
            <h5>Описание стенда (RU)</h5>
            @if (!string.IsNullOrEmpty(Model.DescriptionRu))
            {
                <p>@Model.DescriptionRu</p>
            }
            else
            {
                <p>Нет описания</p>
            }
        </div>
        <div class="form-group">
            <h5>Описание стенда (EN)</h5>
            @if (!string.IsNullOrEmpty(Model.DescriptionEn))
            {
                <p>@Model.DescriptionEn</p>
            }
            else
            {
                <p>Нет описания</p>
            }
        </div>
        <div class="form-group">
            <h5>Экспонаты</h5>
            @if (Model.Exhibits?.Count != 0)
            {

                @foreach (var exhibit in Model.Exhibits)
                {
                    <div class="d-flex flex-row justify-content-between">
                        <p style="width:25%">@exhibit.TitleBe</p> <p style="width:25%">@exhibit.TitleEn</p> <p style="width:25%">@exhibit.TitleRu</p>
                    </div>
                }
            }
            else
            {
                <p>Пусто</p>
            }
        </div>
        <div class="form-group">
            <h5>Фото</h5>
            @if (Model.Photo != null)
            {
                var base64 = Convert.ToBase64String(Model.Photo.Photo);
                var imgSrc = String.Format("data:image/gif;base64,{0}", base64);

                <img class='img-thumbnail small-image img-small-loaded' src="@imgSrc" />
            }
            else
            {
                <label>Нет фото</label>
            }
        </div>
        <button type="button" class="btn btn-outline-secondary btn-form" onclick="LoadView('/Stands/Edit/@Model.Id?hallId=@ViewBag.HallId')">
            <img src="~/images/edit.png" class="img-btn" />Редактировать
        </button>
        <button type="button" class="btn btn-outline-secondary btn-form" onclick="DeleteItem('/Stands/Delete/@Model.Id?hallId=@ViewBag.HallId', '@Model.Id')">
            <img src="~/images/delete.png" class="img-btn" />Удалить
        </button>
    </div>
}


@model GSU.Museum.Web.Models.HallViewModel

@{
    <h3>Добавление холла</h3>

    <form id="form" enctype="multipart/form-data">

        <div class="form-group">
            <label for="titleBe">Название (BY)</label>
            <span asp-validation-for="TitleBe"></span>
            <input class="form-control" placeholder="Название холла на белорусском языке" type="text" asp-for="TitleBe" />
        </div>
        <div class="form-group">
            <label for="titleRu">Название (RU)</label>
            <span asp-validation-for="TitleRu"></span>
            <input type="text" asp-for="TitleRu" placeholder="Название холла на русском языке" class="form-control" />
        </div>
        <div class="form-group">
            <label for="titleEn">Название (EN)</label>
            <span asp-validation-for="TitleEn"></span>
            <input type="text" asp-for="TitleEn" placeholder="Название холла на английском языке" class="form-control" />
        </div>
        <div class="form-group">
            <label>Фото</label>
            <span class="field-validation-valid" id="photoSpan" data-valmsg-for="file" data-valmsg-replace="true"></span>
            <div id="imageBlock" class="form-group">
            </div>
            <button type="button" id="btnUpload" onclick="LoadFile('#inputFile')" class="btn btn-outline-secondary btn-form">
                <img src="~/images/upload.png" class="img-btn" />Загрузить
            </button>
            <input data-val="true" data-val-required="Выберите фото" id="inputFile" style="visibility: hidden" type="file" name="file" />
        </div>

        <div class="form-group">
            <button type="button" onclick="CreateHall('TitleRu')" class="btn btn-outline-secondary btn-form">
                <img src="~/images/save.png" class="img-btn" />Сохранить
            </button>
        </div>
    </form>
}
